<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.statistics.StatisticsFragment">

    <ScrollView
        android:id="@+id/verticalScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical">

            <TableLayout
                android:id="@+id/trackInfoTable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:stretchColumns="8">

                <TableRow>

                    <TextView
                        android:text="Время (UTC)"
                        android:layout_column="1"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@drawable/textview_border"/>

                    <TextView
                        android:text="Широта"
                        android:layout_column="2"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@drawable/textview_border"/>

                    <TextView
                        android:text="Долгота"
                        android:layout_column="3"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@drawable/textview_border"/>

                    <TextView
                        android:text="Точность"
                        android:layout_column="4"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@drawable/textview_border"/>

                    <TextView
                        android:text="Высота (м)"
                        android:layout_column="5"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@drawable/textview_border"/>

                    <TextView
                        android:text="Скорость (км/ч)"
                        android:layout_column="6"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@drawable/textview_border"/>

                    <TextView
                        android:text="Заряд (%)"
                        android:layout_column="7"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:background="@drawable/textview_border"/>

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

    </ScrollView>

</FrameLayout>