<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@layout/fragment_main">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.artezio.sporttracker.presentation.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_eventCreateAndUpdateFragment"
            app:destination="@id/eventCreateAndUpdateFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.artezio.sporttracker.presentation.statistics.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" >
        <action
            android:id="@+id/action_statisticsFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventCreateAndUpdateFragment"
        android:name="com.artezio.sporttracker.presentation.event.EventCreateAndUpdateFragment"
        android:label="EventCreateAndUpdateFragment" >
        <action
            android:id="@+id/action_eventCreateAndUpdateFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <argument
            android:name="eventId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>
</navigation>