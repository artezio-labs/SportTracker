<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_nav"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:label="Тренировки"
        android:name="com.artezio.osport.tracker.presentation.main.MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_trackerFragment2"
            app:destination="@id/trackerFragment"
            app:enterAnim="@anim/from_bottom_to_top_animation" />
    </fragment>

    <fragment
        android:id="@+id/trackerFragment"
        android:label="Запись"
        android:name="com.artezio.osport.tracker.presentation.tracker.TrackerFragment">
        <action
            android:id="@+id/action_trackerFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

</navigation>