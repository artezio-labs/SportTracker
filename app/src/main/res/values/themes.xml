<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SportTracker" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_status_bar_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- закругляет bottom sheet dialog -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <!-- Customize your theme here. -->
        <!-- Это нужно чтобы вылючить Dark Mode на некоторых телефонах, например Xiaomi -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Date and time picker dialogs theme -->
    </style>

    <style name="Theme.SportTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="android:textColorSecondary">@color/bottom_navigation_unselected_item_color
        </item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item> // yep, that helped to skip collapsed state at initial
        <item name="behavior_hideable">true</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Date & time picker dialogs -->
    <style name="TimeAndDatePickerDialogsTheme" parent="android:Theme.Material.Light.Dialog">
<!--        <item name="android:datePickerStyle">@style/TimeAndDatePickerDialogsStyle</item>-->
        <item name="android:colorAccent">@color/app_theme_color</item>
        <item name="buttonBarButtonStyle">@style/TextButton</item>
        <item name="android:textColor">@color/app_theme_color</item>
    </style>
    <style name="TimeAndDatePickerDialogsStyle" parent="@android:style/Widget.Material.Light.DatePicker">
<!--        <item name="android:headerBackground">@color/app_theme_color</item>-->
    </style>
    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/app_theme_color</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Bottom sheet full screen -->
    <style name="Widget.MyApp.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item> // yep, that helped to skip collapsed state at initial
        <item name="behavior_hideable">true</item>
    </style>
    <style name="Theme.MyApp.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.MyApp.BottomSheet.Modal</item>
    </style>
</resources>